@page

@model FromboardDelivery.Pages.LoginModel
@{
    ViewData["Title"] = "Вход";
}

@section HeaderButton {
    <a class="btn btn-primary text-nowrap head-btn" type="submit" asp-page="Index">Главная</a>
}

@section Main{
    <main class="login-main">
        <section>
            <div class="container login">
                <div class="row">
                    <div class="col-12 calcult rounded-4">
                        <div class="row">
                            <h2>Вход</h2>
                        </div>
                        <h2></h2>
                        <form class="row mx-auto" method="post" asp-antiforgery="true">
                            <div class="col-12 mb-4">
                                <input asp-for="Manager.Email" class="form-control" id="email" placeholder="Почта" />
                                <span asp-validation-for="Manager.Email" />
                            </div>
                            <div class="col-12 mb-4">
                                <input asp-for="Manager.Password" class="form-control" id="password" placeholder="Пароль" />
                                <span asp-validation-for="Manager.Password" />
                            </div>
                            <div class="col-12 mb-3 d-grid">
                                <button type="submit" class="btn btn-primary mb-3">Войти</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>
}